{
  "id": "info.matjaz.candy",
  "name": {
    "en": "Candy"
  },
  "description": {
    "en": "Homey productivity boost",
    "nl": "Homey productiviteitsboost"
  },
  "version": "0.4.1",
  "compatibility": "0.x",
  "category": [
    "tools"
  ],
  "author": {
    "name": "Matjaž Lipuš",
    "email": "matjazl@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Matjaž Lipuš",
        "website": "http://matjaz.info",
        "email": "matjazl@gmail.com"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "flow": {
    "triggers": [{
      "id": "systemInitiated",
      "title": {
        "en": "Homey initiated",
        "nl": "Homey gestart"
      }
    }],
    "conditions": [{
      "id": "systemCloudConnected",
      "title": {
        "en": "!{{Connected|No connection}} to cloud",
        "nl": "!{{Verbinding|Geen verbinding}} met cloud"
      }
    },{
      "id": "systemFlowTimeout",
      "title": {
        "en": "Flow !{{not|}} run in last",
        "nl": "Flow !{{niet|}} uitgevoerd laatste"
      },
      "args": [
        {
          "name": "timeout",
          "type": "number",
          "placeholder": {
            "en": "5"
          }
        },{
          "name": "units",
          "type": "autocomplete",
          "placeholder": {
            "en": "Units...",
            "nl": "Eenheid..."
          }
        }
      ]
    }],
    "actions": [{
      "id": "enableFolderFlows",
      "title": {
        "en": "Enable all folder flows",
        "nl": "Activeer flows in een map"
      },
      "args": [
        {
          "name": "folder",
          "type": "autocomplete",
          "placeholder": {
            "en": "Folder name...",
            "nl": "Naam map..."
          }
        },
        {
          "name": "which",
          "type": "dropdown",
          "values": [
            {
              "id": "current",
              "label": {
                "en": "Current folder only",
                "nl": "Alleen deze map"
              }
            },
            {
              "id": "all",
              "label": {
                "en": "Current and descendant folders",
                "nl": "Deze en onderliggende mappen"
              }
            }
          ]
        }
      ]
    }, {
      "id": "disableFolderFlows",
      "title": {
        "en": "Disable all folder flows",
        "nl": "Deactiveren flows in een map"
      },
      "args": [
        {
          "name": "folder",
          "type": "autocomplete",
          "placeholder": {
            "en": "Folder name...",
            "nl": "Naam map..."
          }
        },
        {
          "name": "which",
          "type": "dropdown",
          "values": [
            {
              "id": "current",
              "label": {
                "en": "Current folder only",
                "nl": "Alleen deze map"
              }
            },
            {
              "id": "all",
              "label": {
                "en": "Current and descendant folders",
                "nl": "Deze en onderliggende mappen"
              }
            }
          ]
        }
      ]
    }, {
      "id": "reboot",
      "title": {
        "en": "Reboot Homey",
        "nl": "Reboot Homey"
      }
    }]
  }
}
